@model UserModel
@{
    ViewData["title"] = "Register User";
}
<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-1">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>New User Signup!</h2>
                    <form asp-action="Create" asp-controller="Account">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div>
                            <input type="email" placeholder="Email" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger" />
                        </div>
                        <div>
                            <input type="text" placeholder="Username" asp-for="Username" />
                            <span asp-validation-for="Username" class="text-danger" />
                        </div>
                        <div>
                            <input type="password" placeholder="Password" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger" />
                        </div>
                        <button type="submit" class="btn btn-default">Signup</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}