@model AppUserModel
@{
    ViewData["title"] = "Edit User";
}
<h1 style="text-align: center;"> Edit User </h1>
<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Name</label>
            <input asp-for="UserName" class="form-control" required />
            <span asp-validation-for="UserName" class="text-danger" />

        </div>
        <div class="form-group">
            <label>Email</label>
            <textarea asp-for="Email" class="form-control" required></textarea>
            <span asp-validation-for="Email" class="text-danger" />

        </div>
        <div class="form-group">
            <label>Phone</label>
            <textarea asp-for="PhoneNumber" class="form-control" required></textarea>
            <span asp-validation-for="PhoneNumber" class="text-danger" />

        </div>
        <div class="form-group">
            <label>Password</label>
            <textarea asp-for="PasswordHash" class="form-control" readonly required></textarea>
            <span asp-validation-for="PasswordHash" class="text-danger" />

        </div>
        <div class="form-group">
            <label>Role</label>
            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles" required>
            </select>
            <span asp-validation-for="RoleId" class="text-danger" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Update User</button>
        </div>

    </form>
    <a asp-action="Index" class="btn btn-default">Back to User list</a>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
