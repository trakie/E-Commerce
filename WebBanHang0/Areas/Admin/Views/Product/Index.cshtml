@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product List";
}
<h1 style ="text-align: center;"> Product List </h1>
<a asp-action="Create" asp-controller="Product" class="btn btn-default">Create Product</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Slug</th>
            <th scope="col">Category</th>
            <th scope="col">Brand</th>
            <th scope="col">Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>@item.Price</td>
                <td><img src="~/media/products/@item.Image" width="50" height="50"></td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id" class="btn btn-default">Edit</a>
                    <a asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id" class="btn btn-default confirmDeletion">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>