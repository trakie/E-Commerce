@model ProductModel
@{
    ViewData["title"] = "Create Product";
}
<h1 style="text-align: center;"> Create Product </h1>
<div class="col-md-9">
<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger" />

    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger" />

    </div>
    <div class="form-group">
        <label>Image</label>
        <input asp-for="ImgUpload" class="form-control" />
        <span asp-validation-for="ImgUpload" class="text-danger" />
            <img id="imgpreview" class="pt-2" width="50" height="50" />

    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger" />

    </div>
    <div class="form-group">
        <label>Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
            <option>Choose a category</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger" />
    </div>
    <div class="form-group">
        <label>Brand</label>
        <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
            <option>Choose a brand</option>
        </select>
        <span asp-validation-for="BrandId" class="text-danger" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Create Product</button>
    </div>

</form>
    <a asp-action="Index" class="btn btn-default">Back to Product list</a>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.ckeditor.com/4.22.1/full/ckeditor.js"></script>

    <script>
        $("#ImgUpload").change
        (
            function()
            {
                readURL(this);
            }
        )
    </script>

    <script>
        CKEDITOR.replace('Description');
    </script>
}
