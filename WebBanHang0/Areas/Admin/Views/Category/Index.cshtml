@model IEnumerable<CategoryModel>
@{
    ViewData["title"] = "Category List";
}
<h1 style="text-align: center;"> Category List </h1>
<a asp-action="Create" asp-controller="Category" class="btn btn-default">Create Catgory</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Slug</th>
            <th scope="col">Status</th>
            <th scope="col">Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>@item.Slug</td>
                <td>
                    @if (item.Status==1)
                    {
                        <span class="text text-success">Show</span>
                    }
                    else
                    {
                        <span class="text text-danger">Hidden</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id" class="btn btn-default">Edit</a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id" class="btn btn-default confirmDeletion">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>