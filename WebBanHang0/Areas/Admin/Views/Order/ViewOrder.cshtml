@model IEnumerable<OrderDetails>
@{
    ViewData["title"] = "Order Detail";
}
<h1 style="text-align: center;"> Order Detail </h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Code</th>
            <th scope="col">Username</th>
            <th scope="col">ProductId</th>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.OrderCode</td>
                <td>@item.UserName</td>
                <td>@item.ProductId</td>
                <td>@item.Product.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
@*                 <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Processing</span>
                    }
                    else
                    {
                        <span class="text text-danger">Processed</span>
                    }
                </td>
 *@
                <td>
                    <a asp-action="ViewOrder" asp-controller="Order" asp-route-Id="@item.OrderCode" class="btn btn-default">View</a>
                    <a asp-action="Delete" asp-controller="Order" asp-route-Id="@item.Id" class="btn btn-default confirmDeletion">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>